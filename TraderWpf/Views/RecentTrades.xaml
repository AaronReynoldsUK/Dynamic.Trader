<UserControl x:Class="TraderWpf.Views.RecentTrades"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:views="clr-namespace:TraderWpf.Views"
             xmlns:tradeExample="clr-namespace:TradeExample;assembly=TradeExample"
             mc:Ignorable="d" 
               d:DataContext="{d:DesignInstance tradeExample:RecentTradesViewer, IsDesignTimeCreatable=False}"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock
                             Margin="4 0 0 0"
                             VerticalAlignment="Center"
                             Height="18"
                        
                             Text="{Binding Data.Count, StringFormat='\{0} trades open in closed in last 60 seconds'}"/>

        <views:TradesGrid Grid.Row="1" DataContext="{Binding Data}"/>

    </Grid>
</UserControl>
